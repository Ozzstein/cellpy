[tox]
envlist =
    ;py24, py25, py26, py27, py30, py31, py32, py33, py34, jython, pypy, pypy3, flake8
;skip_missing_interpreters =
    ;true

[testenv:flake8]
basepython=python
deps=flake8
commands=flake8 cellpy

[testenv]
setenv =
    PYTHONPATH = {toxinidir}:{toxinidir}/cellpy
deps =
    -r{toxinidir}/requirements_dev.txt
    -r{toxinidir}/requirements.txt
commands =
    pip install -U pip
    py.test --basetemp={envtmpdir}
    deps =
      -r{toxinidir}/requirements.txt
